<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background" android:weightSum="2"
              android:id="@+id/lnr_odd_main">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:id="@+id/lnr_odd_header" android:weightSum="2" android:background="@color/head_bg_color">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btn_sth_back" android:background="@drawable/icon_back"
                android:layout_gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/txt_sth_head"
                android:textStyle="bold" android:textSize="25sp" android:clickable="false"
                android:editable="false" android:inputType="date"
                android:textColor="@color/head_text_color" android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lnr_sth_content" android:baselineAligned="false"
            android:background="@color/background"
            >
        <Button android:layout_width="fill_parent" android:layout_height="100dp" android:text="Import"
                android:id="@+id/btn_sth_import"
                android:textSize="20dp" android:background="@drawable/button_selector"
                android:textColor="@color/main_btn_text_color"
                android:layout_weight="1" android:layout_gravity="center_vertical" android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>
        <Button android:layout_width="fill_parent" android:layout_height="100dp" android:text="Export"
                android:id="@+id/btn_sth_export" android:layout_gravity="center_vertical"
                android:textSize="20dp" android:background="@drawable/button_selector"
                android:textColor="@color/main_btn_text_color"
                android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>