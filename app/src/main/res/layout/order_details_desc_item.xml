<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#fff6fcff" android:weightSum="5" android:gravity="center" android:id="@+id/lnr_oddi_item">
    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_oddi_item" android:layout_weight="1" android:hint="Item Name"
            android:layout_marginTop="5dp" android:textColor="#ff010001"
            android:textAlignment="center"
            android:gravity="center" android:layout_marginBottom="5dp" android:text="Item Name"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_oddi_qty" android:layout_weight="1" android:hint="Date" android:layout_marginTop="5dp"
            android:textColor="#ff010001" android:textAlignment="center"
            android:layout_gravity="center_vertical" android:gravity="center|center_horizontal"
            android:layout_marginBottom="5dp" android:text="Qty"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:id="@+id/txt_oddi_service" android:layout_weight="1" android:hint="Customer"
            android:layout_marginTop="5dp"
            android:textColor="#ff010001" android:textAlignment="center" android:layout_gravity="center_vertical"
            android:gravity="center" android:layout_marginBottom="5dp" android:text="Service Type"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_oddi_remark" android:layout_weight="1" android:hint="Remark"
            android:layout_marginTop="5dp"
            android:textColor="#ff010001" android:textAlignment="center"
            android:layout_gravity="center_vertical" android:gravity="center" android:layout_marginBottom="5dp"
            android:text="Price"/>
</LinearLayout>