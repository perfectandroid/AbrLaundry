<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#fff6fcff" android:weightSum="5" android:gravity="center" android:id="@+id/lnr_oli_main">
    <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_oli_order_no" android:layout_weight="1" android:hint="Order No"
            android:layout_marginTop="5dp" android:textColor="#ff010001"
            android:textAlignment="center"
            android:gravity="center"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_oli_date" android:layout_weight="1" android:hint="Date" android:layout_marginTop="5dp"
            android:textColor="#ff010001" android:textAlignment="center"
            android:layout_gravity="center_vertical" android:gravity="center|center_horizontal"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:id="@+id/txt_oli_customer" android:layout_weight="1" android:hint="Customer"
            android:layout_marginTop="5dp"
            android:textColor="#ff010001" android:textAlignment="center" android:layout_gravity="center_vertical"
            android:gravity="center"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_oli_total" android:layout_weight="1" android:hint="Total"
            android:layout_marginTop="5dp"
            android:textColor="#ff010001" android:textAlignment="center"
            android:layout_gravity="center_vertical" android:gravity="center"/>
    <TextView android:layout_width="50dp" android:layout_height="wrap_content" android:id="@+id/txt_oli_status"
              android:layout_weight="1" android:hint="Status" android:layout_marginTop="5dp"
              android:textColor="#ff010001" android:textAlignment="center" android:layout_gravity="center_vertical"
              android:gravity="center" android:layout_marginRight="5dp" android:visibility="gone"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="39dp"
            android:layout_height="45dp"
            android:text=">"
            android:id="@+id/btn_oli_next" android:hint="Remove"
            android:layout_gravity="center_horizontal" android:background="@android:color/holo_blue_light"/>
</LinearLayout>