<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#fff6fcff" android:weightSum="3" android:gravity="center" android:id="@+id/lnr_oli_main">
    <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_user_code" android:layout_weight="1.46" android:hint="User Code"
            android:layout_marginTop="5dp" android:textColor="#ff010001"
            android:textAlignment="center"
            android:gravity="center"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_user_name" android:layout_weight="1.54" android:hint="Date" android:layout_marginTop="5dp"
            android:textColor="#ff010001" android:textAlignment="center"
            android:layout_gravity="center_vertical" android:gravity="center|center_horizontal"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:text=">"
            android:id="@+id/btn_oli_next" android:hint="Remove"
            android:background="@android:color/holo_blue_light"/>
</LinearLayout>